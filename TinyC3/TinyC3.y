				updateNextInstr();
				emit(">","",$1->location->name, $3->location->name); // Emit the greater than operation
				updateNextInstr();
				emit("goto", ""); // Emit the goto statement
				updateNextInstr();
			}
		}
		| relational_expression L_EQT shift_expression           
		{
			// Check if the types of both expressions are compatible
